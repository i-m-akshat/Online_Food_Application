@model Models.ViewModel.HomePageViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div>   

    <!--Banner-->
    <div class="bannerDiv" id="Banner">
        <div class="mask">
            <div>
                <span class="bannerImgText">
                    Flavours of Ayodhya <br />
                    The Best Food Restaurant In Ayodhya
                </span>
                <div class="row" id="_searchFood">
                    <h2 class="text-white text-center" style="font-family: 'Permanent Marker', cursive;">
                        Search For the Food
                    </h2>
                    <div class="col-md-10 col-sm-10 col-10">
                        <input type="search" class="form-control" id="tags" style="border-radius:2rem" />
                    </div>
                    <div class="col-md-2 col-sm-1 col-1">
                        <a role="button" class="btn  btn-outline-light btn-sm" onclick="goToFoodDetails()">Search</a>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <!--Why Choose Us-->
    <div class="DescriptionContainer col-12 my-3">
        <div class="row my-3 mx-2 ">
            <h3 class="row-header" style="font-family: 'Permanent Marker', cursive;">Why Choose Us?</h3>
            <p class="text-center text-white" style="font-size:15px">You should Choose us because </p>
            <div class="col-12 my-2">
                <div class="row g-0 justify-content-center align-items-center">
                    <div class=" col-md-3 my-1 mx-2 d-flex align-items-stretch" style="background:none">
                        <div class=" col-12 d-flex flex-column">
                            <center><img src="~/Images/kindpng_3260136.png" class="d-flex" style="border-radius:50%;height:200px;widht:250px" /></center>
                            <div class="col-12 mb-0 mt-auto">
                            <h5 class="row-header mt-1" style="font-size:20px">Fast Delivery</h5>
